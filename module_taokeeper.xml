<?xml version="1.0" encoding="UTF-8"?>
<project name="module_taokeeper" default="compile.module.taokeeper">
  <dirname property="module.taokeeper.basedir" file="${ant.file.module_taokeeper}"/>
  
  <property name="module.jdk.home.taokeeper" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.taokeeper" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.taokeeper" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.taokeeper" value="${compiler.args}"/>
  
  <property name="taokeeper.output.dir" value="${module.taokeeper.basedir}/target/classes"/>
  <property name="taokeeper.testoutput.dir" value="${module.taokeeper.basedir}/target/test-classes"/>
  
  <path id="taokeeper.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="taokeeper.module.production.classpath">
    <path refid="${module.jdk.classpath.taokeeper}"/>
  </path>
  
  <path id="taokeeper.runtime.production.module.classpath">
    <pathelement location="${taokeeper.output.dir}"/>
  </path>
  
  <path id="taokeeper.module.classpath">
    <path refid="${module.jdk.classpath.taokeeper}"/>
    <pathelement location="${taokeeper.output.dir}"/>
  </path>
  
  <path id="taokeeper.runtime.module.classpath">
    <pathelement location="${taokeeper.testoutput.dir}"/>
    <pathelement location="${taokeeper.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.taokeeper">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.taokeeper">
    <patternset refid="excluded.from.module.taokeeper"/>
  </patternset>
  
  
  <target name="compile.module.taokeeper" depends="compile.module.taokeeper.production,compile.module.taokeeper.tests" description="Compile module taokeeper"/>
  
  <target name="compile.module.taokeeper.production" depends="register.custom.compilers" description="Compile module taokeeper; production classes"/>
  
  <target name="compile.module.taokeeper.tests" depends="register.custom.compilers,compile.module.taokeeper.production" description="compile module taokeeper; test classes" unless="skip.tests"/>
  
  <target name="clean.module.taokeeper" description="cleanup module">
    <delete dir="${taokeeper.output.dir}"/>
    <delete dir="${taokeeper.testoutput.dir}"/>
  </target>
</project>